{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "id-online": "http://dodona.ugent.be/schemas/1.0/DodonaSubmission/testgroup.json",
    "title": "Submission",
    "description": "Root node of the test hierarchy that contains all tests of the submission.",
    "type": "object",
    "allOf": [
        { "$ref": "../Submission/definitions.json#/TestGroupBase" },
        {
            "properties": {
                "groups": {
                    "description": "List of tabs.",
