<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= @series.name %></h2>
        <div class="card-title-fab">
          <button type="submit" class="btn btn-primary btn-fab" form="edit_series_<%= @series.id %>">
            <span class="glyphicon glyphicon-ok"></span>
          </button>
        </div>
      </div>
      <div class="card-supporting-text row">
        <div class="col-xs-6">
          <%= render 'form', series: @series %>
        </div>
        <div class="col-xs-6">
          <h4><%= t ".exercises" %></h4>
          <ul class="series-exercise-list">
            <% @series.exercises.each do |exercise| %>
              <li><%= link_to exercise.name, exercise %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <% if policy(@series).add_exercise? %>
        <div class="card-supporting-text card-border">
          <h4><%= t ".add_exercises" %></h4>
          <div id="exercises-table-wrapper">
            <%= render partial: 'exercises/series_exercises_table', locals: {exercises: @exercises, series: @series}  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function () {
    init_series_edit();
  });
</script>
