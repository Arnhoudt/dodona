<% if series.deadline? %>
  <% met = series.completed_before_deadline?(user: current_user) %>
  <% if series.deadline > Time.now %>
    <%= "<small class='#{deadline_class deadline_met, true}' title='deadline #{t "series.show.deadline_in"} #{time_ago_in_words series.deadline}'><i class='mdi #{deadline_icon deadline_met, true} mdi-12'></i> #{l series.deadline, format: :long}</small>".html_safe %>
  <% else %>
    <%= "<small class='#{deadline_class deadline_met, false}' title='deadline was #{time_ago_in_words series.deadline} #{t 'series.deadline.ago'} '><i class='mdi #{deadline_icon deadline_met, true} mdi-12'></i> #{l series.deadline, format: :long}</small>".html_safe %>

    <small class="<%= deadline_class met, in_future %>" title="<%= l(series.deadline, format: :long) %>">
    <i class="mdi mdi-12 <%= deadline_icon met, in_future %>"></i>
    <% if in_future %>
      <%= " #{t "series.show.deadline_in"} #{time_ago_in_words series.deadline}" %>
    <% elsif met %>
      <%= " #{time_ago_in_words series.deadline} #{t "series.deadline.ago"}" %>
    <% else %>
      <%= t("series.show.missed_deadline") %>
    <% end %>
  </small>
<% end %>
