<div class="collapse score-details" id="<%= "score-details-#{feedback.id}" %>">
  <h4><%= t "feedbacks.score_table.score_breakdown" %></h4>
  <table class="table table-condensed">
    <% if feedback.scores.length > 1 %>
      <tr>
        <td>
          <%= t "feedbacks.score_table.total_score" %><br>
          <span class="text-muted small"><%= t "feedbacks.score_table.total_description" %></span>
        </td>
        <td><%= format_score feedback.score %> / <%= format_score feedback.maximum_score %></td>
      </tr>
    <% end %>
    <% score_item_scores.each do |score_item, score| %>
      <% score = score.first %>
      <tr>
        <td>
          <%= score_item.name %>
          <% unless score_item.visible %>
            <i class="mdi mdi-android mdi-18 colored-secondary" title="<%= t "score_items.table.visible-no" %>"></i>
          <% end %>
          <br>
          <span class="text-muted small"><%= score_item.description %></span>
        </td>
        <td><%= format_score score.score %> / <%= format_score score_item.maximum %></td>
      </tr>
    <% end %>
  </table>
</div>