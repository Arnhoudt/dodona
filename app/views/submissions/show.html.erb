<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card exercise-description">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text">Oplossing <%= @submission.exercise.name %></h2>
      </div>
      <div class="card-supporting-text">
        <b>Ingediend:</b> <span title="<%= @submission.created_at.in_time_zone("CET").to_s(:long) %>"><%= time_ago_in_words @submission.created_at %> geleden</span></br>
        <b>Status:</b> <%= @submission.status %></br>
        <b>Resultaat:</b> <%= @submission.result %></br>
        <b>Code:</b>
        <%= markdown("```javascript\n" + @submission.code + "\n```") %>
      </div>
    </div>
  </div>
</div>
