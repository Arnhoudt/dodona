<tr id="submission_<%= submission.id %>" data-status="<%= submission.status %>">
  <td>
    <% if submission.queued? || submission.running? %>
      <span class="glyphicon glyphicon-hourglass"></span>
    <% elsif submission.unknown? %>
      <span class="glyphicon glyphicon-alert colored-warning"></span>
    <% elsif submission.accepted %>
      <span class="glyphicon glyphicon-ok colored-correct"></span>
    <% else %>
      <span class="glyphicon glyphicon-remove colored-wrong"></span>
    <% end %>
  </td>
  <% if current_user.admin? %>
    <td>
      <%= link_to submission.user.username, user_submissions_path(submission.user), title: submission.user.full_name %>
    </td>
  <% end %>
  <% if !exercise %>
    <td>
      <%= link_to submission.exercise.name, exercise_path(submission.exercise) %>
    </td>
  <% end %>
  <td>
    <span title="<%= l submission.created_at.in_time_zone("CET"), format: :long %>"><%= time_ago_in_words submission.created_at %> <%= t ".ago" %></span>
  </td>
  <td>
    <%= Submission.human_enum_name(:status, submission.status) %>
  </td>
  <td>
    <%= submission.summary %>
  </td>
  <td>
    <% if exercise.nil? %>
      <%= link_to submission, class: "load-submission", title: t(".view_solution") do %><span class="glyphicon glyphicon-share-alt"></span><% end %>
    <% else %>
      <%= link_to submission, class: "load-submission", title: t(".view_solution"), 'data-remote' => true do %><span class="glyphicon glyphicon-chevron-right"></span><% end %>
    <% end %>

  </td>
</tr>
