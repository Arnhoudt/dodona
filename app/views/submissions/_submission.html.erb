<tr>
  <% if current_user.admin? %>
    <td>
      <%= link_to submission.user.username, user_submissions_path(submission.user), title: submission.user.full_name %>
    </td>
  <% end %>
  <% if !exercise %>
    <td>
      <%= link_to submission.exercise.name, exercise_path(submission.exercise) %>
    </td>
  <% end %>
  <td>
    <span title="<%= submission.created_at.in_time_zone("CET").to_s(:long) %>"><%= time_ago_in_words submission.created_at %> <%= t ".ago" %></span>
  </td>
  <td>
    <%= Submission.human_enum_name(:status, submission.status) %>
  </td>
  <td>
    <%= submission.summary %>
  </td>
  <td>
    <%= link_to submission, title: t(".view_solution"), 'data-remote' => !exercise.nil? do %><span class="glyphicon glyphicon-share-alt"></span><% end %>
  </td>
</tr>
