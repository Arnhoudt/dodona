<%= form_for(programming_language, :html => {class: 'form-horizontal'}) do |f| %>
  <% if programming_language.errors.any? %>
    <div class="callout callout-danger" id="error_explanation">
      <h4><%= t("errors.validation_errors", :count => programming_language.errors.count) %></h4>
      <ul>
        <% programming_language.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group row">
    <%= f.label :name, :class => "col-sm-3 col-form-label" %>
    <div class="col-sm-4"><%= f.text_field :name, class: "form-control" %></div>
  </div>

  <div class="field form-group row">
    <%= f.label :editor_name, :class => "col-sm-3 col-form-label" %>
    <div class="col-sm-4"><%= f.text_field :editor_name, class: "form-control" %></div>
  </div>

  <div class="field form-group row">
    <%= f.label :renderer_name, :class => "col-sm-3 col-form-label" %>
    <div class="col-sm-4"><%= f.text_field :renderer_name, class: "form-control" %></div>
  </div>

  <div class="field form-group row">
    <%= f.label :extension, :class => "col-sm-3 col-form-label" %>
    <div class="col-sm-4"><%= f.text_field :extension, class: "form-control" %></div>
  </div>

  <div class="field form-group row">
    <%= f.label :icon, :class => "col-sm-3 col-form-label" %>
    <div class="col-sm-4"><%= f.text_field :icon, class: "form-control" %></div>
    <div class="col-sm-4 control-icon">
      <i id="icon-preview" class="mdi mdi-<%= f.object.icon %> icon"></i>
    </div>
  </div>
<% end %>

<script>
  document.getElementById("programming_language_icon").addEventListener('input', (e) => {
      document.getElementById("icon-preview").classList = `mdi icon mdi-${e.target.value}`;
  })
</script>
