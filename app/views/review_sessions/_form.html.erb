<% content_for :javascripts do %>
  <%= javascript_pack_tag 'review' %>
<% end %>
<%= form_for review_session, html: { class: "form-horizontal review-form" } do |f| %>
  <div>
    <%= f.hidden_field :series_id %>
    <h4><%= review_session.series.name %> <span class="small"><%= review_session.series.course.name %></span></h4>

    <%= render partial: 'exercises_table', locals: {
      series: @review_session.series,
      exercises: @review_session.series.exercises,
    } %>

    <br><b>Deadline</b><br>

    <div class="field form-group">
      <div class='col-sm-12'>
        <div class="input-group" id='deadline-group' data-wrap=true data-enable-time=true data-time_24hr=true data-max-date="<%= Time.current.httpdate %>">
          <%= f.text_field :deadline, class: "form-control", 'data-input': true %>
          <span class="input-group-btn">
            <button class="btn btn-default" type="button" data-toggle><i class='mdi mdi-calendar-blank mdi-18'></i></button>
            <button class="btn btn-default" type="button" data-clear><i class='mdi mdi-close mdi-18'></i></button>
          </span>
        </div>
      </div>
      <span class="help-block col-sm-12"><%= t(".deadline-help_html") %></span>
    </div>
  </div>

  <% if review_session.errors.any? %>
    <div>
      <div class="callout callout-danger" id="error_explanation">
        <h4><%= t('errors.validation_errors', count: review_session.errors.count) %></h4>
        <ul>
          <% review_session.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>
<script>
  $(function() {
    dodona.initDeadlinePicker("#deadline-group");
  });
</script>
