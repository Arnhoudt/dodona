<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card evaluation-user-select">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('.title') %></h2>
      </div>
      <div class="card-supporting-text">
        <p class="selected-users">
          <span id="users-count-wrapper">
            <%= t("review_sessions.edit_users.users_selected_html", count: @review_session.users.count) %>
          </span>
          <%= link_to t('review_sessions.edit_users.clear'), set_multi_user_review_session_path(@review_session, type: 'none', format: :js), remote: true, method: :post, data: { confirm: t('review_sessions.members_table.remove_users_consequences') } %>.
        </p>
        <%= link_to t('review_sessions.edit_users.back_to_review_session'), review_session_path(@review_session), class: "btn btn-text btn-primary pull-right" %>
        <%= render partial: 'edit_users', locals: { confirm: true } %>
      </div>
    </div>
  </div>
</div>
