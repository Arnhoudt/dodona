<div class="row">
  <div class="col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('.title') %></h2>
      </div>
      <div class="card-supporting-text card-border">
        <%= render partial: 'layouts/searchbar',
                   locals: {
                       eager: false,
                       course_labels: @course_labels,
                       institutions: Institution.of_course_by_members(@course),
                       actions: [
                         {
                           text: t('.add_enrolled'),
                           action: set_multi_user_review_session_path(@review_session, type: 'enrolled', format: :js)
                         },
                         {
                           text: t('.add_submitted'),
                           action: set_multi_user_review_session_path(@review_session, type: 'submitted', format: :js)
                         }
                       ]
                   } %>
        <div id="users-table-wrapper">
          <%= render partial: 'members_table',
                     locals: {
                         course_memberships: @course_memberships,
                         pagination_opts: @pagination_opts
                     } %>
        </div>

      </div>
    </div>
    <div class="card">
      <div class="card-supporting-text">
        <h4><%= t '.delete_title' %></h4>
        <p><%= t '.delete_consequences' %></p>
      </div>
      <div class="card-actions card-border">
        <% if policy(@review_session).destroy? %>
          <%= link_to t('review_sessions.destroy'),
                      review_session_path(@review_session),
                      method: :delete,
                      data: { confirm: t('general.are_you_sure') },
                      class: "btn btn-primary btn-text" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
