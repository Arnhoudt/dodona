<table class="table table-resource">
  <thead>
    <tr>
      <th><%= t('.user') %></td>
      <% reviews[:exercises].each do |exercise| %>
        <th class="review-table-center review-exercise"><%= exercise.name %></td>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% review_session.users.order(last_name: :asc, first_name: :asc).each do |user| %>
      <% review_l = reviews[:reviews][user.id] %>
      <tr>
        <td><%= link_to user.full_name, course_member_path(@review_session.series.course, user), title: user.full_name, class: "ellipsis-overflow", target: "_blank" %></td>
        <% review_l.each do |review| %>
          <%
            if review.submission.blank?
              submission_status = "not-started"
            elsif review.submission.accepted
              submission_status = "correct"
            else
              submission_status = "wrong"
            end
          %>
          <td class="review-table-center">
            <span class='review <%= submission_status %>'>
              <%= link_to review_session_review_path(review_session, review), class: "btn btn-icon" do %>
                <% if review.completed? %>
                  <i class="mdi mdi-comment-check-outline mdi-24" title="<%= t ".submission_" + submission_status %><%= t ".review_finished" %>"></i>
                <% else %>
                  <i class="mdi mdi-comment-outline mdi-24" title="<%= t ".submission_" + submission_status %><%= t ".review_unstarted" %>"></i>
                <% end %>
              <% end %>
            </span>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
