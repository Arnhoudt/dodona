<div class="field form-group row">
  <div class="col-sm-6 offset-sm-3">
    <div class="form-check">
      <input type="checkbox" id="<%= name %>" class="form-check-input" name="<%= name %>" <%= "checked" if local_assigns[:checked] %>>
      <label class="form-check-label" for="<%= name %>"><%= explanation %></label>
    </div>
  </div>
  <% if local_assigns.key? :details %>
    <span class="help-block col-sm-6 offset-sm-3">
        <%= local_assigns[:details] %>
    </span>
  <% end %>
</div>
