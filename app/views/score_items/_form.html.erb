<% if score_item.errors.any? %>
  <div>
    <div class="callout callout-danger" id="error_explanation">
      <h4><%= t('errors.validation_errors', count: score_item.errors.count) %></h4>
      <ul>
        <% score_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<%= form_for([evaluation, score_item], html: { class: 'form-horizontal' }, namespace: evaluation_exercise.id, remote: true) do |f| %>
  <% unless score_item.persisted? %>
    <%= f.hidden_field :evaluation_exercise_id, value: evaluation_exercise.id %>
  <% end %>
  <div class="field form-group">
    <%= f.label :name, :class => "col-sm-3 control-label" %>
    <div class="col-sm-6"><%= f.text_field :name, required: true, class: "form-control" %></div>
  </div>
  <div class="field form-group">
    <%= f.label :description, :class => "col-sm-3 control-label" %>
    <div class="col-sm-6"><%= f.text_area :description, class: "form-control", rows: "2" %></div>
    <span class="help-block col-sm-offset-3 col-sm-6"><%= t ".description-help" %></span>
  </div>
  <div class="field form-group">
    <%= f.label :maximum, :class => "col-sm-3 control-label" %>
    <div class="col-sm-6"><%= f.number_field :maximum, step: 0.01, min: 0, required: true, class: "form-control" %></div>
  </div>
  <div class="field form-group">
    <%= f.label :visible, t(".visible"), class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <div class="checkbox">
        <%= label_tag do %>
          <%= f.check_box :visible %>
          <span class="checkbox-label"><%= t ".visible-help" %></span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit t("score_items.form.save"), class: "btn btn-primary btn-text" %>
    </div>
  </div>
<% end %>