<% content_for :javascripts do %>
  <%= javascript_pack_tag 'submission' %>
<% end %>

<% content_for :container_class do %>container-fluid<% end %>

<div class="row" id="review-page">
  <div class="col-xs-12 col-md-push-9 col-md-3 review-metadata">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('.action_title') %></h2>
      </div>
      <div class="card-supporting-text card-border">
        <%= render partial: 'review_actions', locals: { review_session: @review.review_session, review: @review } %>
      </div>
    </div>
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('.metadata_title') %></h2>
      </div>
      <div class="card-supporting-text card-border">
        <%= render partial: 'review_metadata', locals: { review: @review } %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-pull-3 col-md-9 review-submission">
    <div class="card review-show">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('submissions.show.submission_results') %></h2>
      </div>
      <div class="card-supporting-text card-border">
        <% if @review.submission.present? %>
          <div class="code-table" data-submission-id="<%= @review.submission.id %>">
            <%= @review.submission.judge.renderer.new(@review.submission, current_user).parse %>
          </div>
        <% else %>
          <%= t('.no_linked_submission') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if @review.submission.present? %>
  <script>
    $(() => window.dodona.codeListing.setReviewSession(<%= @review.review_session.id %>));
  </script>
<% end %>
