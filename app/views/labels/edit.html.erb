<div class="row">
  <div class="col-md-10 offset-md-1 col-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= @label.name %></h2>
        <div class="card-title-fab">
          <%= render 'application/fab_button', form: "edit_label_#{@label.id}", icon: 'check' %>
        </div>
      </div>
      <div class="card-supporting-text">
        <%= render 'form', label: @label %>
      </div>
    </div>
  </div>
</div>
