<div class="row">
  <div class="col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('.title') %></h2>
      </div>
      <div class="card-supporting-text">
        <table class="table table-resource">
          <thead>
            <tr>
              <th><%= t('.exercise') %></th>
              <th><%= t('.no_annotations') %></th>
              <th class="actions"></th>
            </tr>
          </thead>
          <tbody>
            <% @feedbacks.each do |fb| %>
              <tr>
                <td><%= link_to fb.exercise.name, activity_path(fb.exercise) %></td>
                <td><%= fb.submission.present? ? fb.submission.annotations.count : t('.no_submission') %></td>
                <td class="actions">
                  <% if fb.submission.present? %>
                    <%= link_to submission_path(fb.submission) do %>
                      <i class="mdi mdi-chevron-right mdi-18"></i>
                    <% end %>
                  <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
