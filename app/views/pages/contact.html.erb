<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('.title') %></h2>
      </div>
      <div class="card-supporting-text">
        <div class="col-sm-6">
          <p><%= t('.contact_p1_html') %></p>
          <p><%= t('.contact_p2_html') %></p>
          <p><%= t('.contact_p3_html') %></p>
        </div>
        <div class="col-sm-6">
          <% if policy(RightsRequest).create? %>
            <div class="callout callout-info">
              <h4><%= t('.rights_request_title') %></h4>
              <%= t('.rights_request_redirect_html', url: new_rights_request_path) %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="card-supporting-text card-border">
        <%= form_for @contact_form, url: create_contact_path, html: {class: 'form-horizontal'} do |f| %>
          <div class="field form-group">
            <%= f.label t('.name'), :class => "col-sm-2 col-form-label" %>
            <div class="col-sm-4"><%= f.text_field :name, required: true, class: "form-control" %></div>
          </div>
          <div class="field form-group">
            <%= f.label t('.email'), :class => "col-sm-2 col-form-label" %>
            <div class="col-sm-4"><%= f.text_field :email, required: true, class: "form-control" %></div>
          </div>
          <div class="field form-group">
            <%= f.label t('.subject'), :class => "col-sm-2 col-form-label" %>
            <div class="col-sm-4"><%= f.text_field :subject, required: true, class: "form-control" %></div>
          </div>
          <div class="field form-group">
            <%= f.label t('.message'), :class => "col-sm-2 col-form-label" %>
            <div class="col-sm-8"><%= f.text_area :message, required: true, class: "form-control", rows: 8 %></div>
          </div>

          <% if Rails.env.production? || Rails.env.staging? %>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-8">
                <%= recaptcha_tags %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="card-actions card-border">
        <button type="submit" class="btn-primary btn-text float-right" form="new_contact_form"><%= t('.send') %></a>
      </div>
    </div>
  </div>
</div>
