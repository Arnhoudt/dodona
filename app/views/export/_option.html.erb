<div class="field form-group">
  <div class="col-sm-6 col-sm-offset-3">
    <input type="checkbox" id="<%= name %>" name="<%= name %>" <%= "checked" if local_assigns[:checked] %>>
    <label class="checkbox-label" for="copy_<%= name %>"><%= explanation %></label>
  </div>
  <% if local_assigns.key? :details %>
    <span class="help-block col-sm-6 col-sm-offset-3">
        <%= local_assigns[:details] %>
    </span>
  <% end %>
</div>