<%= content_for :javascripts do %>
  <%= javascript_pack_tag 'export' %>
<% end %>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <h2><%= t '.title' %></h2>
    <div id="errors-wrapper" class="hidden">
        <div class="card-supporting-text">
          <div class="callout callout-danger" id="error_explanation">
            <h4 id="warning-message-wrapper">
            </h4>
          </div>
      </div>
    </div>

    <div id="stepper" class="panel-group stepper" role="tablist" aria-multiselectable="true">
      <div id="choose-panel" class="panel panel-default">
        <div class="panel-heading" role="tab">
          <h4 class="panel-title">
            <span class="step-circle">1</span>
            <a role="button" data-toggle="collapse" data-parent="#stepper" href="#choose-step"  aria-controls="collapseOne">
              <%= @data[:choose_step_text] %>
            </a>
          </h4>
        </div>
        <div id="choose-step" class="panel-collapse collapse in" role="tabpanel" aria-expanded="true">
          <div class="panel-body">
            <div class="stepper-part">
              <%= render partial: 'selection_table', locals: { data: @data } %>
            </div>
            <div class="stepper-actions stepper-border">
              <button id="next_step" class="btn btn-text btn-primary"><%= t('.next_step') %></button>
            </div>
          </div>
        </div>
      </div>

      <div id="choose-options-panel" class="panel panel-default hidden">
        <div class="panel-heading" role="tab">
          <h4 class="panel-title">
            <span class="step-circle">2</span>
            <a role="button" data-toggle="collapse" data-parent="#stepper" href="#choose-options-step" id="show-panel" aria-controls="collapseOne">
              <%= t('.choose_options') %>
            </a>
          </h4>
        </div>
        <div id="choose-options-step" class="panel-collapse collapse" role="tabpanel" aria-expanded="false">
          <div class="panel-body">
            <div class="stepper-part">
              <%= form_with class: "form-horizontal", id: "download_submissions" do |form| %>
                <input type="hidden" id="all_submissions" name="all" value="false">
                <%= render partial: 'option', locals: { name: 'only_last_submission', explanation: t('.only_last_submission_label'), details: t('.only_last_submission_label_help') } %>
                <%= render partial: 'option', locals: { name: 'deadline', explanation: t('.deadline_label'), details: t('.deadline_label_help') } %>
                <% if @user.present? %> 
                  <input type="hidden" name="user_id" value="<%= @user.id %>">
                  <input type="hidden" name="group_by" value="personal">
                <% else %>
                  <div class="form-group">
                    <strong class="col-sm-6 col-sm-offset-3"><%= t '.group_submissions_label' %></strong>
                  </div>
                  <div class="field form-group">
                    <div class="col-sm-6 col-sm-offset-3">
                        <input type="radio" id="group_by_student" name="group_by" checked value="user">
                        <label class="checkbox-label" for="group_by_student"><%= t '.group_by_student' %>
                    </div>
                    <span class="help-block col-sm-offset-3 col-sm-6"><%= t '.group_by_student_help' %></span>
                    <div class="col-sm-6 col-sm-offset-3">
                        <input type="radio"  id="group_by_exercise" name="group_by" value="exercise">
                        <label class="checkbox-label" for="group_by_exercise"><%= t '.group_by_exercise' %>
                    </div>
                    <span class="help-block col-sm-offset-3 col-sm-6"><%= t '.group_by_exercise_help' %></span>
                  </div>
                  <%= render partial: 'option', locals: { name: 'all_students', explanation: t('.all_students_label'), details: t('.all_students_label_help') } %>
                <% end %>
                <%= render partial: 'option', locals: { name: 'with_info', explanation: t('.with_info_label'), details: t('.with_info_label_help') } %>
              <% end %>
            </div>
            <div class="stepper-actions stepper-border">
              <button type="submit" form="download_submissions" class="btn btn-text btn-primary"><%= t('.start_download') %></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(dodona.initSelection);
</script>
