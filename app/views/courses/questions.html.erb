<%= content_for :javascripts do %>
  <%= javascript_pack_tag 'course' %>
<% end %>
<%= render partial: 'navbar_links' %>
<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('.title') %></h2>
      </div>
      <div class="card-supporting-text">
        <h4><%= t('.questions.open') %></h4>
        <div class="question-table-open">
          <%= render 'question_table', questions: @open %>
        </div>
        <% if @open.try(:total_pages) %>
          <center><%= page_navigation_links @open, false, 'courses', action: 'questions', param_name: 'open_page' %></center>
        <% end %>

        <h4><%= t('.questions.in_progress') %></h4>
        <div class="question-table-in-progress">
          <%= render 'question_table', questions: @in_progress %>
        </div>
        <% if @in_progress.try(:total_pages) %>
          <center><%= page_navigation_links @in_progress, false, 'courses', action: 'questions', param_name: 'in_progress_page' %></center>
        <% end %>

        <h4><%= t('.questions.closed') %></h4>
        <div class="question-table-closed">
          <%= render 'question_table', questions: @closed %>
        </div>
        <% if @closed.try(:total_pages) %>
          <center><%= page_navigation_links @closed, false, 'courses', action: 'questions', param_name: 'closed_page' %></center>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="application/javascript">
    const card = document.querySelector(".card");
    const timer = window.dodona.questionsAutoReload(card, 10000, () => {
        fetch("<% questions_course_path @course %>", {
            headers: {
                "accept": "text/javascript",
                "x-csrf-token": $("meta[name=\"csrf-token\"]").attr("content"),
                "x-requested-with": "XMLHttpRequest",
            },
            credentials: "same-origin",
        })
            .then(req => req.text())
            .then(resp => eval(resp));
    });
</script>
