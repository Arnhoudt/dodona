<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t ".title" %></h2>
      </div>
      <div class="card-supporting-text">
        <%= render partial: 'layouts/searchbar', locals: {labels: @labels, programming_languages: @programming_languages, repositories: @repositories} %>
        <%-# The id is used in index.js.erb to fill in search results, this if prevents results from being shown -%>
        <div id="<%= policy(@series).overview? ? "exercises-table-wrapper" : "" %>">
          <%= render partial: 'exercises_table', locals: {exercises: policy(@series).overview? ? @exercises : [] } %>
        </div>
      </div>
    </div>
  </div>
</div>
