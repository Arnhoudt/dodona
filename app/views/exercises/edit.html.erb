<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card exercise-description">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= @exercise.name.titleize %></h2>
        <div class="card-title-fab">
          <button type="submit" class="btn btn-primary btn-fab" form="edit_exercise_<%= @exercise.id %>">
            <span class="glyphicon glyphicon-ok"></span>
          </button>
        </div>
      </div>
      <div class="card-supporting-text">
        <%= render 'form', exercise: @exercise %>
      </div>
    </div>
  </div>
</div>
