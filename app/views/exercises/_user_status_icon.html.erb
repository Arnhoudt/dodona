<% if summary.series&.deadline&.past? %>
  <% if summary.solved_before_deadline? %>
    <i class="mdi mdi-alarm mdi-18 colored-correct" title="<%= t 'exercises.exercise.deadline_met' %>" data-toggle="tooltip" data-placement="right"></i>
  <% else %>
    <i class="mdi mdi-alarm-off mdi-18 colored-wrong" title="<%= t 'exercises.exercise.deadline_missed' %>" data-toggle="tooltip" data-placement="right"></i>
  <% end %>
<% else %>
  <% if summary.solved? %>
    <i class="mdi mdi-check mdi-18 colored-correct"></i>
  <% elsif summary.submitted? %>
    <i class="mdi mdi-close mdi-18 colored-wrong"></i>
  <% end %>
<% end %>
