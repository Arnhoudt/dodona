<% # arguments: exercise (Exercise), series (Series | nil), user (User) %>
<% if series&.deadline&.past? %>
  <% if exercise.accepted_before_deadline_for?(user, series) %>
    <i class="mdi mdi-alarm-check mdi-18 colored-correct" title="<%= t 'exercises.exercise.deadline_met' %>" data-toggle="tooltip" data-placement="right"></i>
  <% else %>
    <i class="mdi mdi-alarm-off mdi-18 colored-wrong" title="<%= t 'exercises.exercise.deadline_missed' %>" data-toggle="tooltip" data-placement="right"></i>
  <% end %>
<% else %>
  <% if exercise.accepted_for?(user, series) %>
    <i class="mdi mdi-check mdi-18 colored-correct"></i>
  <% elsif exercise.started_for?(user, series) %>
    <i class="mdi mdi-close mdi-18 colored-wrong"></i>
  <% end %>
<% end %>
